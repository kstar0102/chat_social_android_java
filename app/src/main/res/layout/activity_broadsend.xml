<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/chat_back_img"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Broadcast Message"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/greystory"
            android:alpha="0.3"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend to receive (5)"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic1"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic2"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic3"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic5"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pic6"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center|bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/textbar"
                android:layout_alignBottom="@+id/messagesList"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <com.devlomi.record_view.RecordButton
                    android:id="@+id/voice"
                    android:layout_marginStart="3dp"
                    android:layout_width="34dp"
                    android:layout_gravity="bottom"
                    android:layout_height="34dp"
                    android:background="@drawable/circle_b"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    app:mic_icon="@drawable/recv_ic_mic_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/messagebox"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/round_w"
                    android:layout_height="wrap_content">

                    <com.vanniktech.emoji.EmojiEditText
                        android:id="@+id/messageInput"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/black"
                        android:hint="Type a message"
                        android:maxHeight="220dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/round_w"
                        android:imeOptions="actionSend"
                        android:singleLine="false"
                        android:isScrollContainer="true"
                        android:inputType="textAutoCorrect|textAutoComplete|textMultiLine|textCapSentences"/>
                </LinearLayout>


                <com.devlomi.record_view.RecordView
                    android:id="@+id/record_view"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/round_w"
                    android:layout_height="wrap_content"
                    app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                    app:slide_to_cancel_arrow_color="#000000"
                    app:slide_to_cancel_bounds="8dp"
                    app:slide_to_cancel_margin_right="10dp"
                    app:slide_to_cancel_text="@string/SLC"
                    app:counter_time_color="#ff0000"
                    />

                <ImageView
                    android:id="@+id/emoji"
                    android:src="@drawable/chat_moji_icon"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom"/>

                <ImageView
                    android:id="@+id/attachmentButton"
                    android:src="@drawable/add_file_image"
                    android:layout_margin="1dp"
                    android:background="@drawable/circle"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom"/>
                <ImageView
                    android:id="@+id/send"
                    android:src="@drawable/send_w"
                    android:layout_margin="5dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingStart="4dp"
                    android:background="@drawable/circle_b"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>