<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/chat_back_img"/>

            <TextView
                android:text="Create Group"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:alpha="0.3"
            android:background="@color/greystory"/>


        <RelativeLayout
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPic"
                android:src="@drawable/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:id="@+id/dialogUnreadcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/userPic"
                android:layout_alignBottom="@+id/userPic"
                android:layout_marginEnd="-6dp"
                android:layout_marginTop="-1dp"
                android:ellipsize="end"
                android:src="@drawable/profile_camera"
                android:fontFamily="@string/font_fontFamily_medium"
                android:gravity="center"
                android:lines="1"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/nameP"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@color/general_white"
            android:textSize="20dp"
            android:hint="User Name"
            android:text="New Group"/>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:alpha=".3"
            android:layout_gravity="center"
            android:background="@color/greystory"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member (0)"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="16dp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pic6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@color/greystory"
            android:layout_marginLeft="30dp"
            android:alpha="0.3"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/create_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Create"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>