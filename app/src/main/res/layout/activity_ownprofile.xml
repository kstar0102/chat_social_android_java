<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_svg"/>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/profile_menu"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_menu_img"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>


    <RelativeLayout
        android:layout_marginTop="-50dp"
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPic"
            android:src="@drawable/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/dialogUnreadcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/userPic"
            android:layout_alignBottom="@+id/userPic"
            android:layout_marginEnd="-6dp"
            android:layout_marginTop="-1dp"
            android:ellipsize="end"
            android:src="@drawable/profile_camera"
            android:fontFamily="@string/font_fontFamily_medium"
            android:gravity="center"
            android:lines="1"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/nameP"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/profile_edit_image"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/general_white"
        android:hint="User Name"
        android:text="Jone Doe"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/userEmail"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/general_white"
        android:text="your@gamil.com"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/phoneNum"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/general_white"
        android:hint="User Phone"
        android:text="+123456789012"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/userTitle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:background="@color/general_white"
        android:text="Web and mobile expert"/>

    <TextView
        android:id="@+id/profile_txt"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/profile_edit_image"
        android:layout_marginLeft="20dp"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="Profile"/>

    <EditText
        android:id="@+id/profile_title"
        android:enabled="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/general_white"
        android:text="Web and mobile Expert"/>

    <EditText
        android:id="@+id/profile_place"
        android:enabled="false"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:background="@color/general_white"
        android:text="New York, United State"/>

    <TextView
        android:id="@+id/contact_txt"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/profile_edit_image"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="Contact Detail"/>

    <TextView
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/profile_phone_image"
        android:layout_marginLeft="60dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Home"/>

    <EditText
        android:id="@+id/homePhone"
        android:enabled="false"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/general_white"
        android:textColor="@color/black"
        android:hint="User Phone"
        android:text="+123456789012"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="65dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Office"/>

    <EditText
        android:id="@+id/officePhoneNum"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/general_white"
        android:text="+16505551234"/>

    <TextView
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/profile_email_image"
        android:layout_marginLeft="60dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Email"/>

    <EditText
        android:id="@+id/contact_email"
        android:layout_marginLeft="95dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@color/general_white"
        android:textColor="@color/black"
        android:text="Jone@google.com"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/profile_save"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_save_image"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Saved"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_account"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_account_image"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Account"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_help"
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_help_image"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Help"/>
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
